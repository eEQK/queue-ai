{
  "name": "mock-iot-api",
  "version": "1.0.0",
  "description": "Mock IoT API for Emergency Room Queue System - provides hardcoded sensor readings",
  "main": "src/app.ts",
  "type": "module",
  "private": true,
  "scripts": {
